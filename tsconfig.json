{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@ts/*": ["src/types/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ]
  },
  "exclude": ["node_modules"]
}
