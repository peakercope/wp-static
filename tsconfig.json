{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    ".eslintrc.*",
    "**/*.ts",
    "**/*.astro",
    "**/*.svelte",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.js"
  ]
}
