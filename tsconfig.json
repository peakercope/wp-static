{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@static/*": ["src/static/*"],
      "@service/*": ["src/service/*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ]
  }
}
