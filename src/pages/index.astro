---
import { PageLayout } from '@/shared';
import { PostsList, PostListItem, postApi } from '@/entities/post';

const posts = await postApi.getAll();
---

<PageLayout title="Home page">
  <PostsList>
    {posts.map(({ title, slug }) => (
      <PostListItem
        title={title.rendered}
        slug={slug}
      />
    ))}
  </PostsList>
</PageLayout>
